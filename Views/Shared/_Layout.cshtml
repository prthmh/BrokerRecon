        }*/

        #upper_sec{
            display: flex;
            gap: 15px;
        }

        .info, .source {
            display: flex;
            flex-direction: column;
            gap: 8px;
/*            width: 25%;*/
        }

        .source{
            gap: 16px;
        }
        .file-uploader-box .dx-fileuploader-input-wrapper {
            border: 1px solid #ddd;
            padding: 8px;
            border-radius: 4px;
            background-color: white;
        }

