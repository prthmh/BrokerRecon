        .static-section-label {
            position: relative;
            border: 1px solid #d1d5db;
            border-radius: 8px;
            padding: 20px;
            margin-bottom: 20px;
        }

        .static-section-label::before {
            content: attr(data-caption);
            position: absolute;
            top: -10px;
            left: 10px;
            background: white;
            padding: 0 5px;
            font-size: 14px;
            color: #333;
        }

        /* Optional: Add some spacing between fields */
        /*.dx-form-group .dx-field-item {
